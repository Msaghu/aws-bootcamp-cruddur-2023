#! /usr/bin/bash
set -e #stop if it fails at any point

if [ -z "$1" ]; then
    echo "No TASK_ID argument supplied eg ../bin/ecs/connect-to-service-frontend--react-js <ecs task ARN> "
    exit 1
fi 
TASK_ID=$1

CONTAINER_NAME=frontend-react-js

#list tasks running in ECS
echo "TASK ID : $TASK_ID"
echo "Container name: $CONTAINER_NAME"

aws ecs execute-command \
  --region $AWS_REGION \
  --cluster cruddur \
  --task $TASK_ID \
  --container $CONTAINER_NAME \
  --command "/bin/sh" \
  --interactive





